#validate patient id

validate_patient()
{
nfound=0
IFS=$'\n'
#get name array
namearray=($(nawk -F, '{print $1}' patients.csv))
for n in "${namearray[@]}"
do
  if [[ "$1" = "$n" ]]
  then
     nfound=1
     echo "patient Found"
     return 1
  fi
done

if [[ $nfound -eq 0 ]]
then
 echo "patient not found"
 echo "Patient id is not in the database.Please enter a valid patient id"
 return 0
fi
}

validate_patient $1

