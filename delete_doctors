#Delete Doctor
echo "Enter doctor's id"
read doc_id
echo " Do you want to proceed with deleting doctor's record for ID $doc_id? (y/n)"
read c1
if [ "$c1" = y ]
then
awk -v doc_id=$doc_id -F, '$1 != doc_id' doctors.csv > doctors.tmp && mv doctors.tmp doctors.csv

#MAKING DOCTOR FIELD AS "N/A" FOR ADMITTED_PATIENTS
awk -v doc_id=$doc_id -F, 'BEGIN{OFS=FS} {
   if($8 == doc_id) {
   $5=$5 "(N/A)";
   }
   }1' admitted_patients.csv > admitted_patients.tmp && mv admitted_patients.tmp admitted_patients.csv

echo -e ">>>>>Record deleted!<<<<<\n"
else
echo -e "Record not deleted...\n"
fi
