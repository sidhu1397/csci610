# creating a menu with the following options
echo "What operation do you want to perform?";
echo "1. ADD"
echo "2. EDIT"
echo "3. DELETE"
echo "4. SEARCH"
echo "99. exit"
echo -n "Enter your menu choice [1-99]: "

# This loop will run untill select the exit option.
# User will be asked to select option again and again
while :
do

# reading choice
read operation_choice

# case statement is used to compare one value with the multiple cases.
case $operation_choice in
  1)  echo "On which table do you want to ADD the data?"
      echo "1. Doctor 2. Patient 3. Admitted Patient 4. Building 5. Rooms 6. Pharmacy 7. Pharmacy Presrciptions"  
      echo -n "Please enter the corresponding number: "
      read choice
      
      case $choice in
        1) echo "You have chosen to ADD a DOCTOR."
	        ./add_doctor;;
        2) echo "You have chosen to ADD a PATIENT."    
	        ./add_patients;;
        3) echo "You have chosen to ADD an ADMITTED PATIENT"
            ./add_admitted_patient;;
        4) echo "You have chosen to ADD a BUILDING"
            ./add_buildings;;
        5) echo "You have chosen to ADD a ROOM"
            ./add_room;;
        6) echo "You have chosen to ADD a PHARMACY"
            ./add_pharmacy;;
        7) echo "You have chosen to ADD a PHARMACY PRESCRIPTION"
            #YET TO DO THIS ONE
            ./add_pharmacy_prescription;;
        *) echo "Invalid option";;
       esac;;

  2)  echo "On which table do you want to EDIT the data?"
      echo "1. Doctor 2. Patient 3. Admitted Patient 4. Building 5. Rooms 6. Pharmacy 7. Pharmacy Presrciptions"  
      echo -n "Please enter the corresponding number: "
      read choice
  
      case $choice in
        1) echo "You have chosen to EDIT a DOCTOR."
	        ./update_doctors;;
        2) echo "You have chosen to EDIT a PATIENT."    
	        ./update_patients;;
        3) echo "You have chosen to EDIT an ADMITTED PATIENT"
            ./update_admitted_patient;;
        4) echo "You have chosen to EDIT a BUILDING"
            ./update_buildings;;
        5) echo "You have chosen to EDIT a ROOM"
            ./update_room;;
        6) echo "You have chosen to EDIT a PHARMACY"
            ./update_pharmacy;;
        7) echo "You have chosen to EDIT a PHARMACY PRESCRIPTION"
            #YET TO DO THIS ONE
            ./update_pharmacy_prescription;;
        *) echo "Invalid option";;
       esac;;  
      
   3) echo "On which table do you want to DELETE the data?"
      echo "1. Doctor 2. Patient 3. Admitted Patient 4. Building 5. Rooms 6. Pharmacy 7. Pharmacy Presrciptions"  
      echo -n "Please enter the corresponding number: "
      read choice
  
      case $choice in
        1) echo "You have chosen to DELETE a DOCTOR."
	        ./delete_doctors;;
        2) echo "You have chosen to DELETE a PATIENT."    
	        ./delete_patients;;
        3) echo "You have chosen to DELETE an ADMITTED PATIENT"
            ./delete_admitted_patient;;
        4) echo "You have chosen to DELETE a BUILDING"
            ./delete_buildings;;
        5) echo "You have chosen to DELETE a ROOM"
            ./delete_room;;
        6) echo "You have chosen to DELETE a PHARMACY"
            ./delete_pharmacy;;
        7) echo "You have chosen to DELETE a PHARMACY PRESCRIPTION"
            #YET TO DO THIS ONE
            ./delete_pharmacy_prescription;;
        *) echo "Invalid option";;
       esac;;

    4) echo "Which table related SEARCH would you like to perform?"
       echo "1.Doctor 2. Patient 3. Buildings & Rooms 4. Pharmacy"  
       echo -n "Please enter the corresponding number: "
       read choice

        case $choice in
            1) echo "You have chosen DOCTOR."
                ./display_doctors;;
            2) echo "You have chosen PATIENT."    
                ./display_patients;;
            3) echo "You have chosen BUILDING & Rooms."
                ./display_rooms;;
            4) echo "You have chosen PHARMACY."
                ./display_pharmacy;;
            *) echo "Invalid option";;
        esac;;    

    99) echo "Exiting Menu"
        exit;;
    *) echo "Invalid option"
  
esac
  echo "Redirecting to Main Menu"
  ./menu
  exit 1
  echo -n "Enter your menu choice [1-99]: "
done
