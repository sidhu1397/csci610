#validate doctor id

validate_doc()
{
nfound=0
IFS=$'\n'
#get name array
namearray=($(nawk -F, '{print $1}' doctors.csv))
for n in "${namearray[@]}"
do
  if [[ "$1" = "$n" ]]
  then
     nfound=1
     echo "Doc Found!"
     return 1
  fi
done

if [[ $nfound -eq 0 ]]
then
 echo "Doc not found"
 echo "Patient name is not in the database. Please enter a valid patient name"
 return 0
fi
}

validate_doc $1
